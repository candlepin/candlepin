# THIS FILE IS AUTOGENERATED.  ANY CHANGES COULD BE OVERWRITTEN.
<%-
# When you write local variables in the template, use the provided _ variable to store the information.
# If you store directly to self, then you run the risk of interferring with already provided values.
if ENV['logdriver']
  _.driver_class = profile.logdriver_class
  _.jdbc_url = "jdbc:log:#{driver_class || profile.driver_class}:#{(jdbc_url || profile.jdbc_url).sub!(/^jdbc:/, "")}"
else
  _.driver_class = driver_class || profile.driver_class
  _.jdbc_url = jdbc_url || profile.jdbc_url
end
-%>
<%- if ENV['logdriver'] -%>
log4j.logger.net.rkbloom.logdriver.LogPreparedStatement=DEBUG
log4j.logger.net.rkbloom.logdriver.LogStatement=DEBUG
log4j.logger.net.rkbloom.logdriver.LogCallableStatement=DEBUG
log4j.logger.net.rkbloom.logdriver.LogConnection=DEBUG
<%- end -%>
jpa.config.hibernate.connection.driver_class=<%= _.driver_class %>
jpa.config.hibernate.connection.url=<%= _.jdbc_url %>
jpa.config.hibernate.connection.username=<%= username || profile.username %>
jpa.config.hibernate.connection.password=<%= password || profile.password %>

jpa.config.hibernate.dialect=<%= dialect || profile.dialect %>
jpa.config.hibernate.show_sql=<%= show_hibernate || false %>

candlepin.auth.trusted.enable=<%= trusted_enable || true %>
candlepin.auth.oauth.enable=<%= oauth_enable || true %>
candlepin.auth.oauth.consumer.rspec.secret=rspec-oauth-secret
candlepin.auth.oauth.consumer.thumbslug.secret=thumbslug-secret

candlepin.importer.fail_on_unknown=<%= fail_on_unknown || false %>
candlepin.pretty_print=<%= cp_pretty_print || true %>

<%- if hidden_resources -%>
candlepin.hidden_resources=<%= hidden_resources %>
<%- end -%>

# uncomment to enable debug logging in candlepin.log:
#log4j.logger.org.candlepin=DEBUG

candlepin.pinsetter.enable=<%= pinsetter_enabled || true %>
org.quartz.jobStore.misfireThreshold=60000
org.quartz.jobStore.useProperties=false
org.quartz.jobStore.dataSource=myDS
org.quartz.jobStore.tablePrefix=QRTZ_
org.quartz.jobStore.class=org.quartz.impl.jdbcjobstore.JobStoreTX
org.quartz.jobStore.driverDelegateClass=<%= quartz_driver || profile.quartz_driver %>

org.quartz.dataSource.myDS.driver=<%= _.driver_class %>
org.quartz.dataSource.myDS.URL=<%= _.jdbc_url %>
org.quartz.dataSource.myDS.user=<%= username || profile.username %>
org.quartz.dataSource.myDS.password=<%= password || profile.password %>
org.quartz.dataSource.myDS.maxConnections=5

<%- custom_logging.each do |key, value| -%>
<%= "#" if key[0] == "#" %>log4j.logger.<%= key[/^#?(.*)/, 1] %>=<%= value %>
<%- end if custom_logging -%>

<%= additional_properties %>
